<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h1 class="text-center mb-4">Edit Blog</h1>
        <form action="/admin/blogs/modify/<%= blogs._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
            <div class="mb-4">
                <label for="title" class="form-label fw-bold">Blog Title</label>
                <input type="text" class="form-control border rounded-pill px-3" name="title" id="title"
                    value="<%= blogs.title %>" required>
            </div>

            <div class="mb-4">
                <label for="content" class="form-label fw-bold">Content</label>
                <textarea class="form-control border rounded-3 px-3" id="content" name="body" rows="6" required
                    style="resize: none;"><%= blogs.description %></textarea>
            </div>

            <div class="mb-4">
                <label for="category" class="form-label fw-bold">Categories</label>
                <textarea class="form-control border rounded-3 px-3" id="content" name="body" required
                    style="resize: none;"><%= blogs.category%></textarea>
            </div>

            <div class="d-flex justify-content-center gap-3">
                <button type="submit" class="btn btn-primary btn-lg rounded-pill px-4">Save</button>
                <a href="/admin/blogs" class="btn btn-secondary btn-lg rounded-pill px-4">Cancel</a>
            </div>
        </form>
    </div>
</div>