<div class="container mt-5" style="margin-left: 200px;">
    <h1 class="mb-4 text-center">Add New Category</h1>
    <div class="card mx-auto shadow-sm" style="max-width: 500px; border-radius: 10px;">
        <div class="card-body">
            <form action="/admin/categories/add" method="POST">
                <div class="mb-4">
                    <label for="categoryName" class="form-label fw-bold">Category Name</label>
                    <input type="text" class="form-control" id="categoryName" name="categoryName" placeholder="Enter category name" required>
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-block">Add Category</button>
                </div>
            </form>
        </div>
    </div>
</div>
