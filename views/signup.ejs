<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/header.ejs') %>
        <title>Sign Up</title>
        <style>
            body {
                font-family: 'Arial', sans-serif;
                background-color: #f4f5f7;
                color: #333;
            }

            .container {
                background: #ffffff;
                border-radius: 12px;
                box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
                padding: 2rem;
                margin-top: 3rem;
            }

            .form-label {
                font-weight: bold;
                color: #495057;
            }

            .form-control {
                border-radius: 8px;
                border: 1px solid #ced4da;
                padding: 0.75rem;
            }

            .form-check-label {
                font-size: 0.9rem;
                color: #6c757d;
            }

            .btn-primary {
                background-color: #007bff;
                border-color: #007bff;
                border-radius: 8px;
                padding: 0.75rem;
                font-size: 1rem;
            }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #004085;
            }

            a {
                color: #007bff;
                text-decoration: none;
            }

            a:hover {
                text-decoration: underline;
            }
        </style>
</head>

<body>
    <div class="container w-50">
        <h2 class="text-center mb-4">Sign Up</h2>
        <form action="/user/signup" method="post">
            <div class="mb-4">
                <label for="fullName" class="form-label">Full Name</label>
                <input type="text" class="form-control" name="fullName" aria-describedby="fullName"
                    placeholder="Enter your full name" required>
            </div>
            <div class="mb-4">
                <label for="email" class="form-label">Email Address</label>
                <input type="email" class="form-control" name="email" aria-describedby="emailHelp"
                    placeholder="Enter your email" required>
            </div>
            <div class="mb-4">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" name="password" placeholder="Create a password" required>
            </div>

            <!-- Checkbox for Admin role -->
            <div class="mb-4 form-check">
                <input type="checkbox" class="form-check-input" id="adminCheckbox" name="isAdmin">
                <label class="form-check-label" for="adminCheckbox">ADMIN</label>
            </div>

            <button type="submit" class="btn btn-primary w-100">Sign Up</button>
            <div class="d-flex flex-row mt-4 justify-content-center align-items-center">
                <span>Already a user?</span>
                <a href="/user/signin" class="ms-2">Sign In</a>
            </div>
        </form>
    </div>
    <%- include('./partials/scripts.ejs') %>
</body>

</html>